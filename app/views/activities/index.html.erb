<h1>Listing activities</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Topic</th>
  </tr>

<% @activities.each do |activity| %>
  <tr>
    <td><%= link_to activity.name, activity %></td>
    <td><%= activity.topic_id %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Activity', new_activity_path, :class => "btn btn-primary" %>
