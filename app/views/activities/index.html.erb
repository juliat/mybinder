<h1>Listing activities</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Topic</th>
    <th>Official Detailed Version</th>
  </tr>

<% @activities.each do |activity| %>
  <tr>
    <td><%= link_to activity.name, edit_activity_path(activity) %></td>
    <td><%= activity.topic.nil? ? link_to("Update Please", edit_activity_path(activity)) : activity.topic.name %></td>
    <td>Add, edit, blah, with detailed activities.</td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Activity', new_activity_path, :class => "btn btn-primary" %>
