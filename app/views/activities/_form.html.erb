<%= nested_form_for @activity, :html=>{:multipart => true } do |f| %>
  <%# f.error_messages %>
  <p>
  <%= f.label :name %><br />
  <%= f.text_field :name %>
  </p>
  <p>
  <%= f.label :rationale %><br />
  <%= f.text_area :rationale %>
  </p>
  
  <%= f.fields_for :documents do |document_form|  %>
  <div class="well">
    <p>
    <%= document_form.label :file %><br />
    <%= document_form.file_field :file %>
    </p>
    <p>
    <%= document_form.label :description %><br />
    <%= document_form.text_area :description %>
    </p>
    <%= document_form.link_to_remove "Remove this document" %>
  </div>
  <% end %>

  <%= f.link_to_add "Add document", :documents %>
  <p><%= f.submit %></p>
 <% end %>
