<%= simple_form_for @mod, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :unit %>
  <%= f.input :days, :as => "string" %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                mods_path, :class => 'btn' %>
  </div>
<% end %>
