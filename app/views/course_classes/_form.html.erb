<%= simple_form_for @course_class, :html => { :class => 'form-horizontal' } do |f| %>
	<%= f.input :teacher_id, :as => :hidden, :input_html => { :value => "#{current_user.id}" }%>
	<%= f.association :course %>
	<%= f.input :name %>
	<%= f.input :start_date, :label => "Start Date", :as => :date, :start_year => Date.today.year - 1,
						  :end_year => Date.today.year + 1,
						  :order => [:month, :day, :year],
						  :input_html => { :class => 'span2' } %>
						  
	<%= f.input :end_date, :label => "End Date", :as => :date, :start_year => Date.today.year - 1,
					  :end_year => Date.today.year + 1,
					  :order => [:month, :day, :year],
					  :input_html => { :class => 'span2' } %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                topics_path, :class => 'btn' %>
  </div>
<% end %>
