<li class="well">
	<h5><%= detailed_activity.name %>, by <%= detailed_activity.creator %></h5>
	<p><%= detailed_activity.description %></p>
	<% unless detailed_activity.documents.empty? %>
	<h6>Activity Documents</h6>
	<ul>
		<% for document in detailed_activity.documents %>
			<li>
				<%= link_to(document.name, "#{document.file}") %>
				<% if document.description != "" %>
					</br><%= document.description %>
				<% end %>
			</li>
		<% end %>
	</ul>
	<% end %>
</li>
