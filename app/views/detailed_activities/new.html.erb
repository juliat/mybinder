<h1>Contribute Your Materials for this Activity</h1>
<div id="detailed_da_form">
	<%= simple_nested_form_for @detailed_activity, :html => { :class => 'form-horizontal' } do |da_form| %>

		<%= da_form.input :user_id, :as => :hidden, :input_html => { :value => "#{current_user.id}" }%>
		<%= da_form.input :activity_id, :as => :hidden, :input_html => {:value => "#{@detailed_activity.activity_id}" } %>
		<%= da_form.input :name, :label => "Detailed Activity Name" %>
		<%= da_form.input :description %>
		
		
		<div id="activities_documents">
			<%= da_form.simple_fields_for :documents do |document_form| %>
				
				<!-- partial for documents field -->
				<%= render :partial => 'documents/document_fields', :locals => {:f => document_form} %>
				
			<% end %> 
			<p>
				<br />
				<%= da_form.link_to_add(raw("<i class='icon-plus icon-white'></i> Add document"), 
				:documents, :class => 'btn btn-mini btn-primary') %>
			</p>
		</div> 
		
		<%= da_form.button :submit, :class => 'btn-primary' %>
		<%= link_to "Cancel", "#" %>
	<% end %>
</div>
