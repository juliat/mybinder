<%= simple_form_for @goal, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :statement %>
  <%= f.input :goal_type_id %>
  <%= f.input :topic_id %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                goals_path, :class => 'btn' %>
  </div>
<% end %>
