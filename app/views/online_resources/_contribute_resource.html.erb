<h6>Contribute a Resource</h6>
<div id="online_resource_form">
	<% @online_resource	= OnlineResource.new() %>
	<%= simple_form_for @online_resource, :remote => true, :html => { :class => 'form-horizontal' } do |f| %>
		<%= f.input :user_id, :as => :hidden, :input_html => { :value => "#{current_user.id}" } %>
		<%= f.input :resourceable_type, :as => :hidden, :input_html => { :value => controller_name.classify } %>
		<%= f.input :resourceable_id, :as => :hidden, :input_html => {:value => resourceable_id} %>
		<%= f.input :name %>
		<%= f.input :url %>
		<%= f.input :description %>

		<%= f.button :submit, :class => 'btn-primary' %>
		<%= link_to "Cancel", "#" %>
	<% end %>
</div>
