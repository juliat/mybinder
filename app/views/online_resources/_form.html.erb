<%= simple_form_for online_resource, :remote => true, :html => { :class => 'form-horizontal' } do |f| %>
	<legend><%= controller.action_name == "edit" ? "Edit this" : "Contribute" %> Resource</legend>
	<%= f.input :user_id, :as => :hidden, :input_html => { :value => "#{current_user.id}" } %>
	<%= f.input :resourceable_type, :as => :hidden, :input_html => { :value => controller_name.classify } %>
	<%= f.input :resourceable_id, :as => :hidden, :input_html => {:value => resourceable_id} %>
	<%= f.input :name %>
	<%= f.input :url %>
	<%= f.input :description %>

	<%= f.button :submit, :class => 'btn-primary' %>
<% end %>

