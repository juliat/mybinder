<h6>Contribute Your Materials for this Activity</h6>
<div id="document_form">
	<%= simple_form_for document, :remote => true, :html => { :class => 'form-horizontal' } do |f| %>

		<%= f.link_to_remove(raw("<i class='icon-remove'></i>")) %>	
		<%= f.input :user_id, :as => :hidden, :input_html => { :value => "#{current_user.id}" }%>
		<%= f.input :name %>
		<%= f.input :file %>
		<%= f.input :description %>
		<%= f.button :submit, :class => 'btn-primary' %>
		<%= link_to "Cancel", "#" %>
	<% end %>
</div>
