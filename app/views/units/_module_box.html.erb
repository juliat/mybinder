<div class="module_box well">
	<h2>Module <%= mod.number %></h2>
	<% unless mod.topics.nil? %>
	<p><%= mod.days %> Days</p>
	<p><%= mod.notes%></p>
	<div class="topics">
		<h3>Topics</h3>
		<ul>
			<% for topic in mod.topics %>
				<li><%= link_to(topic.name, topic_path(topic)) %></li>
			<% end %>
		</ul>
	</div>
	<% else %>
	<p>This module doesn't have any associated topics yet. <%= link_to("Click here to add one", new_mod_path) %></p>
	<% end %>
</div>
