<h1>Listing units</h1>

<table>
  <tr>
    <th>Course</th>
    <th>Name</th>
    <th>Start date</th>
    <th>Days</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @units.each do |unit| %>
  <tr>
    <td><%= unit.course.name %></td>
    <td><%= unit.name %></td>
    <td><%= unit.start_date %></td>
    <td><%= unit.days %></td>
    <td><%= link_to 'Show', unit %></td>
    <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
    <td><%= link_to 'Destroy', unit, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

