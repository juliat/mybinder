<%- model_class = @unit.class -%>
<h1><%= link_to(@unit.course.name, course_path(@unit.course)) %> > <%=t '.title', :default => @unit.name %></h1>

<a href="#" class="btn" rel="popover" data-title="This unit is <%= @unit.days %> days long." 
    data-content="
    <p>
      <strong>Start date:</strong>
        <%= humanize_date(@unit.start_date) %>
    </p>
    <p>
      <strong>End date:</strong>
      <%= humanize_date(@unit.end_date) %>
    <p>">
      Pacing
</a>

<div class="row">
    <p class="span9">
      <strong><%= model_class.human_attribute_name(:notes) %>:</strong><br>
      <%= @unit.notes %>
    </p>
</div>

<!-- accordion -->
<%= render :partial => "unit_things" %>

	<ul class="nav nav-tabs" id="myTab">
        <% first = true %>
        <% for mod in @mods %>
        
            <% if first %>
            <li class="active">
            <% first = false %>
            
            <% else %>
            <li>
            <% end %>
            
                <a href="#mod<%= mod.number %>" data-toggle="tab">
                    Module <%= mod.number %>
                </a>
            </li>
        <% end %>
	</ul>

	<div class="tab-content">
    <% unless @mods.empty? %>
        <% for mod in @mods %>
            <% 
            if mod.number == 1 
                locals = {:mod => mod, :first => "active" }
            else
                locals = {:mod => mod, :first => "" }
            end 
            %>
            
            <%= render :partial => 'module_box', :locals => locals %>
        <% end %>
    <% end %>
    </div>

