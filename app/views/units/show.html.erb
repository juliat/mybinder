<%- model_class = @unit.class -%>
<h1><%= link_to(@unit.course.name, course_path(@unit.course)) %> > <%=t '.title', :default => @unit.name %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:start_date) %>:</strong><br>
  <%= humanize_date(@unit.start_date) %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:days) %>:</strong><br>
  <%= @unit.days %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:notes) %>:</strong><br>
  <%= @unit.notes %>
</p>

<!-- accordion -->
<%= render :partial => "unit_things" %>


<% unless @mods.empty? %>
    <!-- modules -->
    <% for mod in @mods %>
        <%= render :partial => 'module_box', :locals => {:mod => mod} %>
    <% end %>
<% end %>

