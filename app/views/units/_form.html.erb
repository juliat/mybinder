<%= simple_form_for @unit, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :course_id %>
  <%= f.input :name %>
  <%= f.input :start_date %>
  <%= f.input :days %>
  <%= f.input :notes %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                units_path, :class => 'btn' %>
  </div>
<% end %>
