<!DOCTYPE html>
<html>
<head>
  <title>Mybinder</title>
  <%= google_webfonts_link_tag :open_sans, :bree_serif %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render :partial => "partials/nav" %>
  <div class="container">
      <% # show error messages
          flash.each do |name, msg| %>
          <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
            <a class="close" data-dismiss="alert">Ã—</a>
            <%= msg %>
          </div>
        <% end %>
    <div class="span12">
        <%= yield %>
    </div>
    <%= render :partial => 'partials/uservoice_js' %>
  </div>
</body>
</html>
